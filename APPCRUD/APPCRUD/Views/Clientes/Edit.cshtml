    @Html.HiddenFor(model => model.ID)

    <div class="form-group">
        <label class="control-label col-md-2">TIPO DOCUMENTO</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.TIPO_DOCUMENTO, new { htmlAttributes = new { @class = "form-control" } })
