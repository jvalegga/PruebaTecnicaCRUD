@model APPCRUD.Models.CLIENTE

@{
    ViewBag.Title = "EDITAR";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>EDITAR</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>CLIENTE</h4>
    <hr />
